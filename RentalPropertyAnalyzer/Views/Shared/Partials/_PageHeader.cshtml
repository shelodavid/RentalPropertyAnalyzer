@using Microsoft.AspNetCore.Html
@model (string Title, string? Subtitle, IHtmlContent? Actions)

<div class="page-header d-flex flex-wrap align-items-start justify-content-between gap-3 mb-4">
    <div>
        <h1 class="h4 mb-1">@Model.Title</h1>
        @if (!string.IsNullOrWhiteSpace(Model.Subtitle))
        {
            <p class="text-muted mb-0">@Model.Subtitle</p>
        }
    </div>
    @if (Model.Actions != null)
    {
        <div class="page-header__actions">
            @Model.Actions
        </div>
    }
</div>
