<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title - Rental Property Analyzer</title>
    <!-- Stylesheets and Scripts -->
    <link href="~/css/all.min.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet"/>

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet"/>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Add this line to include Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"/>

    <link href="https://cdn.datatables.net/v/dt/dt-1.13.8/datatables.min.css" rel="stylesheet"/>
    <link href="~/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

    <style>
        /* Modern table design */
        table.modern-table {
            font-size: 0.80rem; /* Adjust font size (smaller than default) */
            border: 1px solid #dee2e6; /* Light grey border for the table */
            border-radius: 10px; /* Rounds the table edges */
            overflow: hidden; /* Ensures rounded corners apply even with borders */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Subtle shadow for a modern look */
            background-color: white; /* Clean white background */
        }

        table.modern-table th {
            font-size: 0.85rem; /* Slightly larger than the body for emphasis */
            background-color: #f8f9fa; /* Light gray background for headers */
            color: #212529; /* Darker text for better readability */
            font-weight: bold;
            border-bottom: 2px solid #dee2e6; /* Slightly thicker bottom border */
        }

        table.modern-table td {
            border: 1px solid #dee2e6; /* Light grey border for the table */
            font-size: 0.80rem; /* Consistent small font size for rows */
            vertical-align: middle; /* Centers content vertically */
        }

        table.modern-table tr:hover {
            background-color: #f1f3f5; /* Light hover effect for rows */
            transition: background-color 0.3s ease; /* Smooth transition */
        }

        table.modern-table img.thumbnail {
            border-radius: 5px; /* Rounds image corners slightly */
            border: 1px solid #dee2e6; /* Light gray border for thumbnails */
            width: 50px;
            height: 50px;
            object-fit: cover;
        }

        /* Center the property selector checkboxes */
        table.modern-table td:first-child {
            text-align: center; /* Center-align checkboxes */
            vertical-align: middle; /* Vertically center */
        }

        /* Center the thumbnails */
        table.modern-table td img.thumbnail {
            display: block; /* Makes the image a block element */
            margin: 0 auto; /* Horizontally centers the image */
        }

        /* Make all table rows white */
        table.modern-table tbody tr {
            background-color: white; /* Set row background to white */
        }

        /* Change table header to blue */
        table.modern-table thead th {
            background-color: #007bff; /* Blue background to match page */
            color: white; /* White text for better contrast */
            font-weight: bold; /* Bold text */
            text-align: center; /* Center-align table headers */
        }

        /* Add borders for a clean look */
        table.modern-table td, table.modern-table th {
            border: 1px solid #dee2e6;
        }

        /* Additional CSS for Purchase Sheet */

        /* Property Image Styles */
        .property-image {
            max-width: 50%;
            height: 50%;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Property Information Header */
        .info-header {
            font-size: 1.5rem;
            font-weight: bold;
        }

        /* Detailed Costs Table Styles */
        .costs-table {
            font-size: 0.9rem;
            border: 1px solid #dee2e6;
            border-radius: 10px;
            background-color: #fff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .costs-table th {
            background-color: #007bff;
            color: #fff;
            font-weight: bold;
            text-align: center;
        }

        .costs-table td {
            border: 1px solid #dee2e6;
            vertical-align: middle;
        }

        .costs-table tr:hover {
            background-color: #f1f3f5;
            transition: background-color 0.3s ease;
        }

        .costs-table .total-row {
            font-weight: bold;
            color: #2c3e50;
        }

    </style>
</head>
<body id="page-top">

    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <li>
                <a class="sidebar-brand d-flex align-items-center justify-content-center my-2" href="~/Home">
                    <div class="sidebar-brand-icon">
                        <i class="fas fa-home fa-2x"></i>
                    </div>
                    <div class="sidebar-brand-text mx-2">My Properties</div>
                </a>
            </li>
            <!-- Divider Start-->
            <li>
                <hr class="sidebar-divider my-5">
            </li>
            <!-- Divider End-->
            <li>
                <a class="sidebar-brand d-flex align-items-center justify-content-center" href="~/rentallistings">
                    <div class="sidebar-brand-icon">
                        <i class="fas fa-fw fa-search"></i>
                    </div>
                    <div class="sidebar-brand-text mx-2">Property Search</div>
                </a>
            </li>

            <!-- Divider Start -->
            <li>
                <hr class="sidebar-divider my-5">
            </li>
            <!-- Divider End-->

            <li>
                <a class="sidebar-brand d-flex align-items-center justify-content-center" href="~/InvestmentProfile/Index">
                    <div class="sidebar-brand-icon">
                        <i class="fas fa-fw fa-cog"></i>
                    </div>
                    <div class="sidebar-brand-text mx-2">My Investment Profile</div>
                </a>
            </li>
            <!-- Divider Start -->
            <li>
                <hr class="sidebar-divider my-5">
            </li>
            <!-- Divider End-->

        </ul>
        <!-- End of Sidebar -->

        <div id="content-wrapper" class="d-flex flex-column" style="padding-left:5px;padding-right:5px;">
            <!-- Topbar -->
            <!--
               This div is the "whitespace" area for sliders.
               The page can fill it by defining section SlidersSection in the .cshtml page.
            -->
            <div class="row mb-3" style="min-height: 200px;">
                @RenderSection("SlidersSection", required: false)
            </div>

            <hr class="my-3" style="border-top: 10px solid #fff; opacity: 1;" />
            <!-- Content -->
            <div id="content">
                <!-- Main body content from individual views/pages -->
                @RenderBody()
            </div>
        </div>
    </div>

    <footer>
        <!-- Footer content if needed -->
    </footer>

    <!-- Optional JavaScript -->
    <!-- jQuery, Popper.js, Bootstrap JS, etc. -->
    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/js/chart-area-demo.js"></script>
    <script src="~/js/chart-pie-demo.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</body>
</html>

