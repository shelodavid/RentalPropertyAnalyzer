<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@((ViewData["Title"] as string) ?? "Rental Property Analyzer") - Rental Property Analyzer</title>
    <!-- Stylesheets and Scripts -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/all.min.css" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Add this line to include Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <link href="https://cdn.datatables.net/v/dt/dt-1.13.8/datatables.min.css" rel="stylesheet" />
    <link href="~/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="app-body">
    <div class="app-shell d-flex flex-column flex-lg-row">
        <nav class="app-sidebar">
            <div class="app-sidebar__inner">
                <a class="app-sidebar__brand" href="~/Home">
                    <span class="app-sidebar__icon"><i class="fas fa-home"></i></span>
                    <span>My Properties</span>
                </a>
                <ul class="nav flex-column gap-1">
                    <li class="nav-item">
                        <a class="nav-link" href="~/rentallistings">
                            <i class="fas fa-fw fa-search"></i>
                            <span>Property Search</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/Forecast">
                            <i class="fas fa-fw fa-chart-line"></i>
                            <span>ROI Forecast</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/InvestmentProfile/Index">
                            <i class="fas fa-fw fa-cog"></i>
                            <span>My Investment Profile</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="app-content d-flex flex-column flex-grow-1">
            <header class="app-topbar">
                <div>
                    <h1 class="app-title">@((ViewData["Title"] as string) ?? "Rental Property Analyzer")</h1>
                    <p class="app-subtitle mb-0">Rental Property Analyzer dashboard</p>
                </div>
            </header>

            <main class="app-main flex-grow-1">
                @if (IsSectionDefined("StatsSection"))
                {
                    <section class="app-section mb-4">
                        @await RenderSectionAsync("StatsSection", required: false)
                    </section>
                }
                @if (IsSectionDefined("FilterSection"))
                {
                    <section class="app-section mb-4">
                        @await RenderSectionAsync("FilterSection", required: false)
                    </section>
                }
                @if (IsSectionDefined("PurchaseOverviewSection"))
                {
                    <section class="app-section mb-4">
                        @await RenderSectionAsync("PurchaseOverviewSection", required: false)
                    </section>
                }
                @if (IsSectionDefined("ControlsSection"))
                {
                    <section class="app-section mb-4">
                        @await RenderSectionAsync("ControlsSection", required: false)
                    </section>
                }
                @if (IsSectionDefined("SlidersSection"))
                {
                    <section class="app-section mb-4">
                        @await RenderSectionAsync("SlidersSection", required: false)
                    </section>
                }
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="app-footer">
        <!-- Footer content if needed -->
    </footer>

    <!-- Optional JavaScript -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/js/chart-area-demo.js"></script>
    <script src="~/js/chart-pie-demo.js"></script>
</body>
</html>
